  .chip.show{display:inline-block}

  /* Modal */
  .cc-overlay{position:fixed;inset:0;background:rgba(15,23,42,.45);display:none;align-items:center;justify-content:center;z-index:9999}
  .cc-overlay.show{display:flex}
  .cc-modal{background:#fff;width:min(720px,94vw);border-radius:12px;box-shadow:0 22px 60px rgba(0,0,0,.28);overflow:hidden;border:1px solid #e7f6ee}
  .cc-head{display:flex;justify-content:space-between;align-items:center;padding:16px 18px;border-bottom:1px solid #eef2f6}
  .cc-title{font-weight:700}
  .cc-x{border:0;background:transparent;cursor:pointer;width:32px;height:32px;border-radius:6px;display:grid;place-items:center}
  .cc-x:hover{background:#f3f4f6}
  .cc-body{padding:16px 18px}
  .cc-foot{padding:12px 18px;border-top:1px solid #eef2f6;display:flex;justify-content:flex-end;color:#6b7280;font-size:12px}

  .info{color:#6b7280;font-size:13px;margin-bottom:10px}
  .pill{display:inline-flex;align-items:center;gap:6px;background:#eef7ff;border:1px solid #cfe6ff;color:#075985;border-radius:999px;padding:3px 8px;font-size:12px;margin:6px 0 12px}

  .search-row{display:flex;gap:0;margin:10px 0 14px}
  .search-input{flex:1;height:46px;border:1px solid #E1E1E1;border-right:none;padding:0 14px;font-size:15px;border-radius:8px 0 0 8px}
  .search-btn{min-width:52px;border:none;background:#01AF67;color:#fff;padding:0 14px;border-radius:0 8px 8px 0;cursor:pointer}
  .search-btn:hover{background:#0b9a5c}

  .location-item{padding:12px 0;border-bottom:1px solid #eef2f6}
  .row{display:flex;align-items:center;gap:10px}
  .left{display:flex;align-items:center;gap:10px;min-width:0;flex:1}
  .radio{appearance:none;-webkit-appearance:none;inline-size:18px;block-size:18px;border:2px solid #cbd5e1;border-radius:50%;display:grid;place-items:center;cursor:pointer}
  .radio:checked{border-color:#01AF67}
  .radio:checked::after{content:"";inline-size:10px;block-size:10px;background:#01AF67;border-radius:50%}
  .name{font-weight:700;white-space:nowrap;overflow:hidden;text-overflow:ellipsis}
  .dist{margin-left:6px;color:#6b7280;font-size:13px;white-space:nowrap}
  .caret-btn{border:0;background:transparent;cursor:pointer;width:24px;height:24px;display:grid;place-items:center}
  .caret{width:14px;height:14px;transition:transform .18s ease}
  .open .caret{transform:rotate(180deg)}
  .addr{color:#111;line-height:1.45;overflow:hidden;max-height:0;transition:max-height .22s ease;padding:0 28px}
  .open + .addr{max-height:220px;padding-top:8px}

  .loading{text-align:center;padding:22px 0;color:#6b7280}
  .spinner{width:36px;height:36px;border:4px solid #ecf0f1;border-top:4px solid #3498db;border-radius:50%;animation:spin 1s linear infinite;margin:0 auto 12px}
  @keyframes spin{0%{transform:rotate(0)}100%{transform:rotate(360deg)}}
  .center{ text-align:center }
  .error{color:#e74c3c;text-align:center;padding:12px 0}
  .hidden{display:none}
</style>
</head>
