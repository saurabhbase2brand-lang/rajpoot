<!-- Modal -->
<div class="cc-overlay" id="overlay">
  <div class="cc-modal" role="dialog" aria-modal="true" aria-labelledby="ccTitle">
    <div class="cc-head">
      <div class="cc-title" id="ccTitle">Pick up near you</div>
      <button class="cc-x" id="closeModal" aria-label="Close">
        <svg width="18" height="18" viewBox="0 0 24 24"><path d="M18 6L6 18M6 6l12 12" stroke="#111" stroke-width="2" stroke-linecap="round"/></svg>
      </button>
    </div>
    <div class="cc-body">
      <div class="info">Showing pickup locations near your current postcode.</div>

      <!-- prefilled search (customer can override) -->
      <div class="search-row">
        <input id="searchInput" class="search-input" placeholder="Enter postcode" maxlength="10" />
        <button id="searchBtn" class="search-btn" aria-label="Search">
          <svg viewBox="0 0 512 512" width="18" height="18"><path fill="currentColor" d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z"/></svg>
        </button>
      </div>

      <div id="pincodePill" class="pill" title="Detected automatically"></div>

      <div id="modalLoading" class="loading">
        <div class="spinner"></div>
        <p>Finding stores…</p>
      </div>

      <div id="list"></div>
      <div id="fallback" class="center hidden">
        <p class="error">We couldn't get your location.</p>
        <p class="info">You can enter a postcode above and search manually.</p>
      </div>
    </div>
    <div class="cc-foot">Close to hide for 24 hours</div>
  </div>
</div>

<script>
/* ====== CONFIG ====== */
const PICKUP_API = "http://localhost:3000/api/pickup";

/* ====== STORAGE KEYS ====== */
const LS_SELECTED_LOCATION  = "pickup.selectedLocation";
const LS_MODAL_DISMISSED_AT = "pickup.modalDismissedAt";

/* ====== DOM ====== */
const overlay      = document.getElementById('overlay');
const closeModal   = document.getElementById('closeModal');
const list         = document.getElementById('list');
const modalLoading = document.getElementById('modalLoading');
const pincodePill  = document.getElementById('pincodePill');
const fallback     = document.getElementById('fallback');
const savedChip    = document.getElementById('savedChip');
const searchInput  = document.getElementById('searchInput');
const searchBtn    = document.getElementById('searchBtn');

/* ====== STATE ====== */
let currentPostcode = null;
let geoCoords = null;

/* ====== HELPERS ====== */
const escapeHTML = s => String(s||'').replace(/[&<>"']/g, m=>({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;'}[m]));
function formatAddress(a){
  const line1=[a?.address1,a?.address2].filter(Boolean).join(', ');
  const line2=[a?.city,a?.province].filter(Boolean).join(', ');
  const line3=[a?.country,a?.zip].filter(Boolean).join(' - ');
  return [line1,line2,line3].filter(Boolean);
}
function calculateDistance(lat1, lon1, lat2, lon2){
  if ([lat1, lon1, lat2, lon2].some(v=>v==null)) return null;
  const R=6371, dLat=(lat2-lat1)*Math.PI/180, dLon=(lon2-lon1)*Math.PI/180;
  const a=Math.sin(dLat/2)**2+Math.cos(lat1*Math.PI/180)*Math.cos(lat2*Math.PI/180)*Math.sin(dLon/2)**2;
  return +(2*R*Math.atan2(Math.sqrt(a),Math.sqrt(1-a))).toFixed(2);
}
function setSavedChip(loc){
  if(!loc){ savedChip.classList.remove('show'); savedChip.textContent=''; return; }
  savedChip.classList.add('show');
  savedChip.textContent = `Pickup location: ${loc.name} — ${loc.address.formatted.join(', ')}`;
}
function showModal(){ overlay.classList.add('show'); }
function hideModal(set24h=true){
  overlay.classList.remove('show');
  if (set24h) localStorage.setItem(LS_MODAL_DISMISSED_AT, new Date().toISOString());
}
function shouldAutoOpen(){
  try{
    const t = localStorage.getItem(LS_MODAL_DISMISSED_AT);
    if (t && (Date.now() - new Date(t).getTime()) < 24*60*60*1000) return false;
  }catch{}
  if (localStorage.getItem(LS_SELECTED_LOCATION)) return false;
  return true;
}

/* ====== GEO ====== */
function geolocate(){
  return new Promise(res=>{
    if(navigator.geolocation){
      navigator.geolocation.getCurrentPosition(
        p=>res({lat:p.coords.latitude, lon:p.coords.longitude}),
        ()=>res(null), {enableHighAccuracy:true, timeout:8000}
      );
    } else res(null);
  });
}
async function reverseGeocodeToPostcode(lat, lon){
  try{
    const url=`https://nominatim.openstreetmap.org/reverse?format=jsonv2&lat=${encodeURIComponent(lat)}&lon=${encodeURIComponent(lon)}`;
    const r=await fetch(url,{headers:{'Accept':'application/json'}});
    if(!r.ok) return null;
    const j=await r.json();
    return j?.address?.postcode || null;
  }catch{ return null; }
}

/* ====== FETCH & RENDER ====== */
async function fetchPickupForPostcode(postcode){
  list.innerHTML='';
  modalLoading.classList.remove('hidden');

  try{
    const r = await fetch(PICKUP_API,{
      method:'POST',
      headers:{'Content-Type':'application/json'},
      body: JSON.stringify({ pincode: postcode, radiusKm: 100 }) // API will return inRadius; we still clamp client-side
    });
    if(!r.ok) throw new Error('api error');
    const data = await r.json();

    // Only inRadius and ≤ 100 km
    let items = (data.inRadius || []).map(loc=>{
      const addr = formatAddress(loc.address);
      let dist = typeof loc.distanceKm === 'number' ? loc.distanceKm : null;
      if (dist == null && loc?.coordinates && geoCoords){
        dist = calculateDistance(geoCoords.lat, geoCoords.lon, loc.coordinates.lat, loc.coordinates.lng);
      }
      return { id:loc.locationId, name:loc.name, distance:dist, address:{formatted:addr}, raw:loc };
    }).filter(x => x.distance == null || x.distance <= 100);

    renderList(items);
  }catch(e){
    console.error(e);
    list.innerHTML='<div class="error">Failed to load locations. Try again.</div>';
  }finally{
    modalLoading.classList.add('hidden');
  }
}

function renderList(items){
  list.innerHTML='';
  if(!items.length){
    list.innerHTML='<div class="error">No pickup locations within 100 km.</div>';
    return;
  }
  items.sort((a,b)=> (a.distance??1e9)-(b.distance??1e9));
  items.forEach(loc=>{
    const row=document.createElement('div');
    row.className='location-item';
    row.innerHTML=`
      <div class="row select">
        <div class="left">
          <input class="radio" type="radio" name="pickup" />
          <div class="name">${escapeHTML(loc.name)}</div>
          <div class="dist">${loc.distance!=null?escapeHTML(loc.distance+' km'):''}</div>
        </div>
        <button class="caret-btn" aria-label="Toggle address">
          <svg class="caret" viewBox="0 0 24 24"><path d="M7 10l5 5 5-5z" fill="#94a3b8"/></svg>
        </button>
      </div>
      <div class="addr">${loc.address.formatted.map(escapeHTML).join('<br>')}</div>
    `;
    const select = row.querySelector('.select');
    const radio  = row.querySelector('.radio');
    const caretB = row.querySelector('.caret-btn');

    select.addEventListener('click', ()=>{
      list.querySelectorAll('.radio').forEach(r=>r.checked=false);
      radio.checked=true;

      list.querySelectorAll('.row').forEach(el=>el.classList.remove('open'));
      select.classList.add('open');

      // Save selection
      localStorage.setItem(LS_SELECTED_LOCATION, JSON.stringify(loc));
      sessionStorage.setItem(LS_SELECTED_LOCATION, JSON.stringify(loc));
      setSavedChip(loc);

      hideModal(false); // close (don’t set 24h block because user selected)
    });

    caretB.addEventListener('click', e=>{
      e.stopPropagation();
      const isOpen = select.classList.toggle('open');
      if(isOpen){
        list.querySelectorAll('.row.open').forEach(el=>{ if(el!==select) el.classList.remove('open'); });
      }
    });

    list.appendChild(row);
  });
}

/* ====== INIT ====== */
document.addEventListener('DOMContentLoaded', async ()=>{
  // Show saved chip if any
  const saved = localStorage.getItem(LS_SELECTED_LOCATION);
  if(saved){ try{ setSavedChip(JSON.parse(saved)); }catch{} }

  // Always open the modal initially (unless suppressed)
  if (shouldAutoOpen()){
    showModal();

    // Geolocate → reverse geocode → prefill search → fetch
    geoCoords = await geolocate();
    if (!geoCoords) {
      modalLoading.classList.add('hidden');
      searchInput.value = ""; // user can type manually
      pincodePill.textContent = "";
      pincodePill.classList.add('hidden');
      fallback.classList.remove('hidden');
    } else {
      currentPostcode = await reverseGeocodeToPostcode(geoCoords.lat, geoCoords.lon);
      if (currentPostcode) {
        searchInput.value = currentPostcode;             // prefill search field
        pincodePill.textContent = `Postcode: ${currentPostcode}`;
        pincodePill.classList.remove('hidden');
        await fetchPickupForPostcode(currentPostcode);
      } else {
        modalLoading.classList.add('hidden');
        fallback.classList.remove('hidden');
      }
    }
  }

  // Manual search (user edits postcode)
  function triggerSearch(){
    const pc = (searchInput.value || "").trim();
    if (!pc) return;
    pincodePill.textContent = `Postcode: ${pc}`;
    pincodePill.classList.remove('hidden');
    fetchPickupForPostcode(pc);
  }
  searchBtn.addEventListener('click', triggerSearch);
  searchInput.addEventListener('keydown', e=>{ if(e.key==='Enter') triggerSearch(); });

  // Close modal (suppresses auto-open for 24h)
  closeModal.addEventListener('click', ()=> hideModal(true));
  overlay.addEventListener('click', e=>{ if(e.target===overlay) hideModal(true); });
});
</script>
